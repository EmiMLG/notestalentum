<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_note_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context="es.telefonica.talentum.noteapp.activities.NoteDetailActivity">

    <fragment
        android:id="@+id/activity_note_detail___detail_fragment"
        android:name="es.telefonica.talentum.noteapp.fragments.NoteDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_note_detail"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/activity_note_detail___close_button"
        android:text="Save"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        />

</LinearLayout>
